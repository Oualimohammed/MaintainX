<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="d-flex align-items-center">
        @if (!string.IsNullOrEmpty(UserProfile?.ProfileImagePath))
        {
            <img src="@UserProfile.ProfileImagePath" class="rounded-circle me-3" width="56" alt="Profile" />
        }
        <div>
            <h3 class="mb-0">Welkom, <strong>@(UserProfile?.FirstName ?? "collega")</strong></h3>
            <small class="text-muted">Laatst bijgewerkt: @LastUpdated.ToString("dd-MM-yyyy HH:mm")</small>
        </div>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-outline-secondary" @onclick="OnRefresh" title="Handmatig verversen">
            <i class="bi bi-arrow-clockwise"></i> Vernieuwen
        </button>
        <button class="btn btn-outline-dark" @onclick="OnToggleAutoRefresh">
            <i class="bi" style="font-size:1rem"></i>
            @(AutoRefresh ? "Auto-refresh: Aan" : "Auto-refresh: Uit")
        </button>
    </div>
</div>

@code {
    [Parameter] public UserProfileResponseDto? UserProfile { get; set; }
    [Parameter] public DateTime LastUpdated { get; set; }
    [Parameter] public bool AutoRefresh { get; set; }

    [Parameter] public EventCallback OnRefresh { get; set; }
    [Parameter] public EventCallback OnToggleAutoRefresh { get; set; }
}
