@code {
    [Parameter] public Func<string, int> CountByStatus { get; set; }
    [Parameter] public Func<int, int> Percent { get; set; }
}

<div class="card shadow-sm mb-3">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-bar-chart-line me-1"></i> Status overzicht
        </h5>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <div class="d-flex justify-content-between">
                <div>
                    <i class="bi bi-lightning-charge me-1"></i> Actieve schema's
                </div>
                <div><strong>@CountByStatus("Active")</strong></div>
            </div>
            <div class="progress mt-2" style="height:8px">
                <div class="progress-bar bg-primary" style="width:@Percent(CountByStatus("Active"))%"></div>
            </div>
        </div>

        <div class="mb-3">
            <div class="d-flex justify-content-between">
                <div>
                    <i class="bi bi-hourglass me-1"></i> In afwachting
                </div>
                <div><strong>@CountByStatus("Pending")</strong></div>
            </div>
            <div class="progress mt-2" style="height:8px">
                <div class="progress-bar bg-warning" style="width:@Percent(CountByStatus("Pending"))%"></div>
            </div>
        </div>

        <div class="mb-3">
            <div class="d-flex justify-content-between">
                <div>
                    <i class="bi bi-check-circle me-1"></i> Voltooid
                </div>
                <div><strong>@CountByStatus("Completed")</strong></div>
            </div>
            <div class="progress mt-2" style="height:8px">
                <div class="progress-bar bg-success" style="width:@Percent(CountByStatus("Completed"))%"></div>
            </div>
        </div>
    </div>
</div>