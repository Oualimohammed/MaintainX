@inject NavigationManager NavigationManager

@code {
    [Parameter] public EventCallback ExportSummary { get; set; }
}

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-lightning me-1"></i> Snelle acties
        </h5>
    </div>
    <div class="card-body">
        <div class="d-grid gap-2">
            <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/maintenance-schedules")'>
                <i class="bi bi-calendar-plus me-2"></i> Onderhoudsschema's beheren
            </button>
            <button class="btn btn-success" @onclick='() => NavigationManager.NavigateTo("/maintenance-logs")'>
                <i class="bi bi-clipboard-plus me-2"></i> Onderhoudslogs
            </button>
            <button class="btn btn-outline-secondary" @onclick="ExportSummary">
                <i class="bi bi-download me-2"></i> Download overzicht (CSV)
            </button>
        </div>
    </div>
</div>