@code {
    [Parameter] public List<VehicleMaintenanceAlertDto> Alerts { get; set; }
    [Parameter] public Func<int, string> GetDueBadgeClass { get; set; }
    [Parameter] public Func<VehicleMaintenanceAlertDto, string> GetDueTextClass { get; set; }
    [Parameter] public Func<string, string> GetVehicleId { get; set; }
}

<div class="card shadow-sm h-100">
    <div class="card-header @(Alerts.Any() ? "bg-warning text-dark" : "bg-success text-white")">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi @(Alerts.Any() ? "bi-exclamation-triangle" : "bi-check-circle")"></i>
                Onderhoudsalerts
            </h5>
            <span class="badge @(Alerts.Any() ? "bg-danger" : "bg-light text-dark")">
                @Alerts.Count
            </span>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Alerts.Any())
        {
            <div class="list-group list-group-flush">
                @foreach (var alert in Alerts)
                {
                    <a href="/maintenance-schedules?vehicleId=@GetVehicleId(alert.LicensePlate)"
                       class="list-group-item list-group-item-action">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-truck me-2"></i>
                                <strong>@alert.LicensePlate</strong>
                                <div class="small text-muted">@alert.VehicleModel</div>
                            </div>
                            <div>
                                <span class="badge @GetDueBadgeClass(alert.DaysUntilDue)">
                                    @alert.NextMaintenanceDue.ToString("dd-MM")
                                </span>
                                <span class="ms-2 small @GetDueTextClass(alert)">
                                    (@alert.DaysUntilDue dag@(alert.DaysUntilDue != 1 ? "en" : ""))
                                </span>
                            </div>
                        </div>
                    </a>
                }
            </div>
        }
        else
        {
            <div class="p-3 text-center">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 2rem;"></i>
                <p class="mt-2 mb-0">Geen kritieke onderhoudsalerts</p>
            </div>
        }
    </div>
</div>